  <div class="row">
    <div class="large-12 columns">
      <h3 style="font-family:'Oswald';color:Orange"><%=@location.address.split(',').first.upcase%><h3>

      <h3>Choose your hunt</h3>
        <%@hunts.each do|hunt|%>

          <li>Name : <%=hunt.name%></li>
          <li>What : <%=hunt.description%></li>
           <li><%= link_to ">>", location_hunt_path(@location, hunt) %></li>


        <%end%>
        <h3> Create your hunt </h3>
        <li><%= link_to "New Hunt", new_location_hunt_path(@location) %></li>

        <li><%= link_to "All locations", locations_path %></li>


    </div>
  </div>


