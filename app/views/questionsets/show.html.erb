
  <script type="text/javascript">
    var map_array = <%= [@questionset.latitude, @questionset.longitude] %>
    var my_zoom =  <%= 13 %>
    var mapcenterlat = <%= @questionset.latitude %>
    var mapcenterlong = <%= @questionset.longitude %>
    var flag = <%= 2 %>
    var quiz_id = <%= @questionset.id %>
    var hunt_id = <%= @questionset.hunt.id %>
  </script>


  <div id="map_canvas" style="height:70%;width:100%"></div>



    <div class="row">
      <div class="large-8 columns blue-box">
         <li> <%=@msg%></li>
        <li>Q <%=@questionset.question_no%>.  <%=@questionset.question%></li>

      </div>

      <div class="large-4 columns ">  <br>
       <% if @itinerary.size >= 1 %>
         <% if @itinerary[0] = 'You have to play' %>

         <%else%>
           <% @itinerary.each_with_index do|stop, index|%>
              <li style="line-height:4px;"><%=index+1%>. <%=stop.address.split(',').first%><li>
            <%end%>
          <%end%>
       <%end%>
      </div>
    </div>

    <section class="signinwhite">



      <div class="row">
        <div class="large-6 columns">
          <%= form_for [@questionset, @huntsplayed] do |f| %>
            <li><%= f.label :address %></li>
            <li><%= f.text_field :address, placeholder: "Address", :class => "address"%></li>
            <%= submit_tag "Answer", :class => "answer large button" %>
          <% end %>



        </div>
      </div>

      <% if @questionset.get_clue != nil %>
      <div class="row">
        <div class="large-12 columns blue-box">
          <%= button_tag "CLUE 1", :class => "clue1 small button", :type => "button" %>
          <li id ="clue1" style="color:white"><%=@questionset.get_clue[0].to_s.html_safe%></li>
          <%= button_tag "CLUE 2", :class => "clue2 small button", :type => "button" %>
          <% if @questionset.get_clue[1] != nil %>
            <li id ="clue2" style="color:white"><%=@questionset.get_clue[1].html_safe%></li>
          <%end%>
          <%= button_tag "CLUE 3", :class => "clue3 small button", :type => "button" %>
          <% if @questionset.get_clue[2] != nil %>
           <li id ="clue3" style="color:white"><%=@questionset.get_clue[2].html_safe%></li>
          <%end%>
        </div>
      </div>
      <%end%>


    </section>


